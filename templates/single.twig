{% extends "base.twig" %}

{% block h1 %} {{ post.title  }} {% endblock %}

{% block content %}
	<div class="content-wrapper container">
        <div>
            <a href="/recent-posts" class="btn btn-primary btn-sm">Back</a>
        </div>

	<article class="mt-4  post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
      <section class="article-content">
        <div class="article-body">
          {{post.content}}
        </div>
      </section>
    </article>
	</div><!-- /content-wrapper -->
{% endblock %}