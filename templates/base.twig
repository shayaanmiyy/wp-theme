{% import 'components/button.twig' as macros %}
{% import 'components/input.twig' as input %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>{% block title %}My Site{% endblock %}</title>
</head>
<body>

    <header>
        <h1>{% block header %}Welcome to My Site{% endblock %}</h1>
        {% set title = 'Here we included header using include()' %}
        {{ include('components/header.twig') }}
    </header>

    <main>
   
        <form class="mt-4 mb-5">
            <p class="m-0 lead">Here we using macro to print the input</p>
            {{ input.input('username', 'text', '', 'Enter your username') }}
            {{ input.input('password', 'password', '', 'Enter your password') }}
        </form>

        <div>
            <p class="m-0 lead">Here we truncating the text truncate(10)</p>
            {% set long_text = 'This is a very long text that needs to be truncated.' %}
            <p>{{ long_text|truncate(10) }}</p>
        </div>

        {% set items = ['Apple', 'Banana', 'Cherry', 'Date'] %}
        {% set shuffled_items = items|shuffle %}
        <ul>
            {% for item in shuffled_items %}
                <li>{{ item }}</li>
            {% endfor %}
        </ul>


        {% set number = 5 %}
        <p>{{ square(number) }}</p>


        {% block content %}{% endblock %}
        {{ macros.button('Home', '/', 'btn btn-primary') }}
        {{ macros.button('Contact', '/contact', 'btn btn-secondary') }}
    </main>

    <footer>
        <p>{% block footer %}Â© 2024 My Site{% endblock %}</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
